defutf8 on
defencoding utf8
encoding utf8 utf8
autodetach on
altscreen on

startup_message off
vbell off

defscrollback 10000
termcapinfo xterm* ti@:te@

defbce on

hardstatus alwayslastline "%{= cd} %-w%{= wk} %n %t* %{-}%+w"

shell $SHELL

# Resize window
bind  r eval 'command -c resize' 'echo "Resize window"'
bind ^r eval 'command -c resize' 'echo "Resize window"'
bind -c resize  h eval 'command -c resize' 'resize -h -1'
bind -c resize ^h eval 'command -c resize' 'resize -h -1'
bind -c resize  l eval 'command -c resize' 'resize -h +1'
bind -c resize ^l eval 'command -c resize' 'resize -h +1'
bind -c resize  j eval 'command -c resize' 'resize -v +1'
bind -c resize ^j eval 'command -c resize' 'resize -v +1'
bind -c resize  k eval 'command -c resize' 'resize -v -1'
bind -c resize ^k eval 'command -c resize' 'resize -v -1'

bindkey -k k5 prev
bindkey -k k6 next

screen 0
screen 1
split

focus down
select 0
title 'console'
resize -v  9
# fire the WINCH signal
resize -v -1

focus up
select 1
title 'workspace'
# fire the WINCH signal
resize -v +1

