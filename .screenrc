defutf8 on
defencoding utf8
encoding utf8 utf8
autodetach on
altscreen off

startup_message off
vbell off

defscrollback 10000
termcapinfo xterm* ti@:te@
term xterm-256color

defbce on

hardstatus alwayslastline "%{= cd} %-w%{= wk} %n %t* %{-}%+w"


shell -$SHELL

# Resize window
bind  r eval 'command -c resize' 'echo "Resize window"'
bind ^r eval 'command -c resize' 'echo "Resize window"'
bind -c resize  h eval 'command -c resize' 'resize -h -1'
bind -c resize ^h eval 'command -c resize' 'resize -h -1'
bind -c resize  l eval 'command -c resize' 'resize -h +1'
bind -c resize ^l eval 'command -c resize' 'resize -h +1'
bind -c resize  j eval 'command -c resize' 'resize -v +1'
bind -c resize ^j eval 'command -c resize' 'resize -v +1'
bind -c resize  k eval 'command -c resize' 'resize -v -1'
bind -c resize ^k eval 'command -c resize' 'resize -v -1'

bindkey -k k5 prev
bindkey -k k6 next

screen 0
screen 1
split

focus down
select 0
resize -v 6
focus up
select 1

