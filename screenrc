defutf8 on
defencoding utf8
encoding utf8 utf8
autodetach on
altscreen off

startup_message off
vbell off

defscrollback 10000
termcapinfo xterm* ti@:te@
term xterm-256color

defbce on

hardstatus alwayslastline "%{= wg} %-w%{=bu dr}%n %t%{-}%+w %= %{=b kw} %Y/%m/%d %0c"


shell -$SHELL

# Resize window
bind  r eval 'command -c resize' 'echo "Resize window"'
bind ^r eval 'command -c resize' 'echo "Resize window"'
bind -c resize  h eval 'command -c resize' 'resize -h -1'
bind -c resize ^h eval 'command -c resize' 'resize -h -1'
bind -c resize  l eval 'command -c resize' 'resize -h +1'
bind -c resize ^l eval 'command -c resize' 'resize -h +1'
bind -c resize  j eval 'command -c resize' 'resize -v +1'
bind -c resize ^j eval 'command -c resize' 'resize -v +1'
bind -c resize  k eval 'command -c resize' 'resize -v -1'
bind -c resize ^k eval 'command -c resize' 'resize -v -1'

bindkey -k k5 prev
bindkey -k k6 next

screen 0
screen 1
split

focus down
select 0
title 'console'
resize -v 8

focus up
select 1
title 'workspace'
# fire the WINCH signal
sleep 1
resize -v +1

